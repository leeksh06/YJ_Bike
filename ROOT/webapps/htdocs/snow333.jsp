<html>
  <head>
    <style>
      html, body {
        margin: 0;
      }

      .noite {
        background: -webkit-linear-gradient(top, rgb(255, 255,255) 50%, rgb(92, 209, 229));
        width: 100%;
        height: 100%;
        position: absolute;
      }

      .floresta {
        position: fixed;
        left: 0;
        bottom: 0;
        width: 100%;
      }

      .floresta img {
        width: 100%;
        position: absolute;
        bottom: 0;
        left: 0;
      }
    </style>
  </head>
  <body>
    <div class="noite"></div>
    <div class="floresta">
      <img src="https://raw.githubusercontent.com/interaminense/starry-sky/master/src/img/bgTree.png" alt="" />
    </div>
  </body>
</html>
